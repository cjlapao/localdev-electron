{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "module": "es2020",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "target": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2020",
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "preserveWhitespaces": true,
    "strictTemplates": true
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "./src/**/*.ts",
    "./app/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "app/node_modules",
    "./node_modules/",
    "./app/node_modules/",
    "node_modules/*",
    "app/node_modules/*",
    "**/node_modules/*",
    "**/app/node_modules/*"
  ]
}
